<MainScreen>:
    name: "screen_main"
    BoxLayout:
        orientation: 'vertical'

        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            
            MDNavigationLayout:

                MDScreenManager:
                    
                    MDScreen:

                        MDButton:
                            pos_hint: {"center_x": .92, "center_y": .95}
                            on_release: nav_drawer.set_state("toggle")

                            MDButtonText:
                                text: "Menu"

                MDNavigationDrawer:
                    id: nav_drawer
                    radius: 0, dp(16), dp(16), 0

                    MDNavigationDrawerMenu:

                        MDNavigationDrawerHeader:
                            orientation: "vertical"
                            padding: 0, 0, 0, "12dp"
                            adaptive_height: True

                        MDLabel:
                            text: "Pressure Kleen"
                            theme_text_color: "Custom"
                            theme_line_height: "Custom"
                            line_height: 0
                            adaptive_height: True
                            padding_x: "16dp"
                            font_style: "Display"
                            role: "small"

                        MDLabel:
                            text: "Power Washing Service"
